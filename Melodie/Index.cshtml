@model IEnumerable<DataBaseModels.Melodie>

@{
    ViewData["Title"] = "List of Songs";
}

<h1>Songs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Durata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataLansare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAlbum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aprecieri)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataLansare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAlbum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aprecieri)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { melodieId = item.Id }) |
                @Html.ActionLink("Details", "Details", new { melodieId = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { melodieId = item.Id })
                
            </td>
            <td>
                <a class="btn btn-primary" style="background-color: forestgreen ;border-color:darkslategray ;color:white" href="@Url.Action("MelodieRiseAprecieri","Melodie", new { melodieId = item.Id })">Like</a>
                
            </td>
            <td>
                <a class="btn btn-primary" style="background-color: forestgreen ;border-color:darkslategray ;color:white" href="@Url.Action("MelodieDecreaseAprecieri","Melodie", new { melodieId = item.Id })">Dislike</a>
            </td>
        </tr>
}
    </tbody>


<body>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
	
	<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
	<script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>

    @if (ViewBag.SuccessMessage != null)
            {
                <text>
                    <script>
                        $(document).ready(function() {
                            alert('@ViewBag.SuccessMessage');
                         });
                    </script>
                </text>
             }
</body>

</table>
